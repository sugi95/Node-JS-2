<div class="alignment">
{{#each errors}}
<div class="alert alert-danger mr-5 ml-5 mt-3">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body mr-5 ml-5 mt-5">
    <h3>Edit Video Idea</h3>
    <form action="/ideas/{{ideas.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT"> 
        <div class="form-group">
            <label for="title">Title</label>
            <input value="{{ideas.title}}" type="text" class="form-control" name="title" id="title" placeholder="Title" required>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea type="text" class="form-control" name="description" id="description" placeholder="Enter Description" required>{{ideas.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary ">Update Idea</button>
    </form>
</div>
</div>